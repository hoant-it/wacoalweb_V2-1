<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./block/head %>
</head>

<body class="nav-md footer_fixed">
    <div class="container body">
        <div class="main_container">
            <% include ./block/leftpanelV2 %>
                <% include ./block/toppanelV2 %>
                <form role="form" id="formSaveID">
                    <!-- page content -->
                    <div class="right_col " role="main" style="min-height: 100vh">
                        <div class="">
                            <div class="page-title">
                                <div class="title_left">
                                    <h3> <small><strong></strong></small></h3>

                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2>Thay đổi mật khẩu <small></small></h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content">
                                        <br>
                                        <div class="form-label-left input_mask">
                                            <div class="form-group">
                                                <label for="txtUserName">Tài Khoản:</label>
                                                <input type="text" class="form-control" name="txtUserName" id="txtUserName" value="<%- userId %>">
                                                <!-- <input type="hidden" id="hidID" value="0" /> -->
                                            </div>
                                            <div class="form-group">
                                                <label for="txtcurrentpassword">Mật Khẩu Hiện Tại:</label>
                                                <input type="password" class="form-control" name="txtcurrentpassword" id="txtcurrentpassword" required="">
                                                <!-- <input type="hidden" id="hidID" value="0" /> -->
                                            </div>
                                            <div class="form-group">
                                                <label for="txtnewpassword">Mật Khẩu mới:</label>
                                                <input type="password" class="form-control" name="txtnewpassword" id="txtnewpassword" required="">
                                            </div>
                                            <div class="form-group">
                                                <label for="txtConfirmPassword">Xác nhận Mật Khẩu mới:</label>
                                                <input type="password" class="form-control" name="txtConfirmPassword" id="txtConfirmPassword">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /page content -->
                          
                                   <!-- footer content -->
                            <footer>
                                <div class="nav_menu">
                                    <nav class="nav navbar-nav">
                                        <ul class=" navbar-right">
                                            <li style="padding-right: 15px; float: right; margin-top: 20px;">
                                                <button type="submit" name="bsubmit" value="submitSave" class="btn btn-primary" id="btnSaveId">Save</button>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </footer>
                            <!-- /footer content -->
                         
                        </div>
                    </div>
                    <% include ./block/script %>
                    <script src="/javascripts/changepasswordjs.js"></script>
                    <!-- <script src="/jquery.validation/1.16.0/jquery.validate.min"></script> -->
                </form>
</body>

</html>